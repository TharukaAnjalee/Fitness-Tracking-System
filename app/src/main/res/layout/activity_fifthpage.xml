<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/h"
    android:padding="30dp"
    tools:context=".fifthpage">

    <TextView
        android:id="@+id/categoryId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#E4F168"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/profileId"
        android:layout_width="290dp"
        android:layout_height="132dp"
        android:layout_below="@+id/categoryId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/v" />

    <EditText
        android:id="@+id/userId"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:backgroundTint="#FFFFFF"
        android:hint="User ID"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
         />

    <EditText
        android:id="@+id/createId"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Created Date"
        android:layout_below="@+id/userId"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
         />

    <EditText
        android:id="@+id/updateId"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFFFFF"
        android:hint="Update Date"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/createId"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
         />

    <EditText
        android:id="@+id/selectId"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFFFFF"
        android:hint="Enter Category"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/updateId"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
         />

    <Button
        android:id="@+id/okId"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectId"
        android:layout_marginTop="50dp"
        android:backgroundTint="#F1DEDE"
        android:text="OK"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textColorHint="#050505"
        android:textSize="22dp"
        android:textStyle="bold" />





</RelativeLayout>